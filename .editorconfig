root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Makefile exige tabs
[Makefile]
indent_style = tab

# YAML (docker-compose, GitHub Actions, k8s, etc.) → indent 2
[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON, TOML → indent 2
[*.{json,toml}]
indent_size = 2

# Markdown → não trim trailing whitespace (dois espaços = <br>)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Shell scripts (bash/zsh/sh)
[*.{sh,bash,zsh}]
indent_size = 2

# Python → PEP8 (4 spaces)
[*.py]
indent_size = 4
max_line_length = 88
