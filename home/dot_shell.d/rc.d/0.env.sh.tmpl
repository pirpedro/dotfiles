if [ -d "$HOME/bin" ]; then
  case ":$PATH:" in
  *:$HOME/bin:*) ;;
  *) export PATH="$HOME/bin:$PATH" ;;  
  esac
 
fi

if [ -d "$HOME/.local/bin" ]; then
  case ":$PATH:" in
  *:$HOME/.local/bin:*) ;;
  *) export PATH="$HOME/.local/bin:$PATH" ;;  
  esac
fi

{{ if not .is.ephemeral }}
  case ":$PATH:" in
  *:$HOME/{{- .path.npm.global -}}/bin:*) ;;
  *) export PATH="$HOME/{{- .path.npm.global -}}/bin:$PATH" ;;  
  esac
{{ end }}